{
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"plugins": ["react"],
	"parser": "babel-eslint",
	"env": {
        "es6": true
    },
	"parserOptions": {
		"sourceType": "module",
		"ecmaFeatures": {
			"ecmaVersion": 2020,
			"jsx": true
		}
	},
	"rules": {
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": "error",
		"react/no-danger": "error",
		"no-undef": "warn"
	}
}
